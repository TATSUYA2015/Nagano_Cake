<div class="container">
  <h3>配送先編集</h3>
</div>
<div class="container">
  <%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
  <div class="col-md-12">
    <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-5"%>
    <%= f.text_field :postal_code, class: "col-md-2"%>
  </div>
  <div class="col-md-12">
    <%= f.label :"住所", class: "col-md-5" %>
    <%= f.text_field :address, class: "col-md-6" %>
  </div>
  <div class="col-md-12">
    <%= f.label :"氏名", class: "col-md-5" %>
    <%= f.text_field :name, class: "col-md-2" %>
    <%= f.submit :"変更内容を保存", class: "text-right btn btn-success" %>
  </div>
  <% end %>
</div>