<div class="container">
  <h3>配送先登録/一覧</h3>
</div>
<div class="container">
    <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
      <div class="col-md-12">
        <%= f.label :"郵便番号（ハイフンなし）",class: "col-md-5" %>
        <%= f.text_field :postal_code, class: "col-md-6" ,size:"20x1"%>
      </div>
      <div class="col-md-12">
        <%= f.label :"住所",class: "col-md-5" %>
        <%= f.text_field :address,class: "col-md-6", size:"40x1" %>
      </div>
      <div class="col-md-12">
        <%= f.label :"宛名", class: "col-md-5" %>
        <%= f.text_field :name, class: "col-md-3", size:"10x1"%>
        <%= f.submit :"新規登録",class: " btn btn-success" %>
      </div>
    <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered ">
        <thead>
          <tr>
            <th class="col-md-2">郵便番号</th>
            <th class="col-md-5">住所</th>
            <th class="col-md-2">氏名</th>
            <th class="col-md-3"></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_public_address_path(address.id),class: "btn btn-success btn-sm" %>
              / <%= link_to "削除する", public_address_path(address.id), method: :delete, data: { confirm: "削除してもよろしいでしょうか？"}, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>