<div class="container">
    <h3>注文情報入力</h3>
</div>
<%= form_with model: @order,  url: confirm_path, method: :post do |f| %>
<div class="container">
    <b>支払い方法</b>
    <div class="container">
        <div><%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: "checked" %><%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:"クレジットカード"] %></div>
        <div><%= f.radio_button :payment_method, Order.payment_methods.key(1) %><%= f.label :payment_method_transfer, Order.payment_methods_i18n[:"銀行振込"]%></div>
    </div>
    <b>お届け先</b>
        <div class="container">
        <%= f.radio_button :address, '0', checked: "checked" %><%= f.label "ご自身の住所" %></br>
            <div class="container">
                〒<%= @customer.postal_code %> <%= @customer.address %>
                <%= @customer.last_name %> <%= @customer.first_name %>
            </div>
        </div>
        <div class="container">
            <%= f.radio_button :address, '1' %><%= f.label "登録済住所からの選択" %></br>
                <div class="container">
                    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
                </div>
        </div>
        <div class="container"><%= f.radio_button :address, '2' %><%= f.label "新しいお届け先" %></br>
            <div class="container">
                <table>
                    <tbody>
                        <tr>
                            <td><%= f.label "郵便番号（ハイフンなし）" %></td>
                            <td><%= f.text_field :postal_code %></td>
                        </tr>
                        <tr>
                            <td><%= f.label "住所" %></td>
                            <td><%= f.text_field :address %></td>
                        </tr>
                        <tr>
                            <td><%= f.label "宛名" %></td>
                            <td><%= f.text_field :name %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    <p class="text-center"><%= f.submit "確認画面へ進む", class: "btn btn-primary" %></p>
</div>
<% end %>
