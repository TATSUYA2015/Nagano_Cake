<div class="container">
  <h2>新規会員登録</h2>
</div>
<div class="container">
    <%= form_with model: @customer, url: public_customer_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4">名前</div>
    <div class="col-md-4 col-sm-4">(姓)<%= f.text_field :last_name %></div>
    <div class="col-md-4 col-sm-4">(名)<%= f.text_field :first_name %></div>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4">フリガナ</div>
    <div class="col-md-4 col-sm-4">(セイ)<%= f.text_field :last_name_kana %></div>
    <div class="col-md-4 col-sm-4">(メイ)<%= f.text_field :first_name_kana %></div>
  </div>

  <div class="row justify-content-around">
  <div class="col-md-4 col-sm-4">メールアドレス</div>
    <div class="col-md-8 col-sm-8"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4">郵便番号(ハイフンなし)</div>
    <div class="col-md-8 col-sm-8"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4">住所</div>
    <div class="col-md-8 col-sm-8"><%= f.text_field :address, size:"60x5" %></div>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4">電話番号(ハイフンなし)</div>
    <div class="col-md-8 col-sm-8"><%= f.text_field :telephone_number %></div>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4">パスワード(６文字以上)</div>
    <div class="col-md-8 col-sm-8">
      <!--
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      -->
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4">パスワード(確認用)</div>
    <div class="col-md-8 col-sm-8">
      <!-- <%= f.label :password_confirmation %><br /> -->
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-4 col-sm-4"></div>
    <div class="col-md-8 col-sm-8"><%= f.submit "新規登録", class: "btn btn-success" %></div>
  </div>
    <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="text-left">
      <p>
        既に登録がお済みの方<br>
        <%= link_to "こちら", new_customer_session_path %>からログインしてください。
      </p>
    </div>
  </div>
</div>