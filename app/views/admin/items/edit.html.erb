<div class="container">
    <h1>商品編集</h1>
    <div class="container">
        <div class="row justify-content-center">
            <%= form_with model: @item,url:admin_item_path, method: :patch do |f| %>
            <table>
                <tr><th>商品画像</th><td><%= f.file_field :image, accept:"image/*" %></td></tr>
                <tr><th>商品名</th><td><%= f.text_field :name, size:"40" %></td></tr>
                <tr><th>商品説明</th><td><%= f.text_area :introduction, size:"40x5" %></td></tr>
                <tr><th>ジャンル</th><td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td></tr>
                <tr><th>税抜価格</th><td><%= f.text_field :price, size:"40" %>円</td></tr>
                <tr>
                    <th>販売ステータス</th>
                    <td>
                        <%= f.radio_button :is_active, true, checked: true %><%= f.label :is_active_true , "販売中" %>
                        <%= f.radio_button :is_active, false %><%= f.label :is_active_false , "販売停止中" %>
                    </td>
                </tr>
            </table>
            <div class="text-center">
                <%= f.submit "変更を保存", {class: "btn btn-sm btn-success edit_book_39065"} %>
            </div>
            <% end %>
        </div>
    </div>
</div>

