<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

        <%= form_with model: @item, url:admin_items_path, method: :post do |f| %>
        <h1>商品新規登録</h1>
        <div class="container">
          <div class="row">
              <div class="col-md-5">
                <p class="text-center">商品画像</p>
              </div>
              <div class="col-md-7">
               <%= f.file_field :image, accept:"image/*" %>
              </div>
              <div class="col-md-5">
                <p class="text-center">商品名</p>
              </div>
              <div class="col-md-7">
                <%= f.text_field :name, size:"40" %>
              </div>
              <div class="col-md-5">
                <p class="text-center">商品説明</p>
              </div>
              <div class="col-md-7">
                <%= f.text_area :introduction, size: "40x5" %>
              </div>
              <div class="col-md-5">
                <p class="text-center">ジャンル</p>
              </div>
              <div class="col-md-7">
                <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %>
              </div>
              <div class="col-md-5">
                <p class="text-center">税抜価格</p>
              </div>
              <div class="col-md-7">
                <%= f.text_field :price, size: "40" %>
              </div>
              <div class="col-md-5">
                <p class="text-center">販売ステータス</p>
              </div>
              <div class="col-md-7">
                <%= f.select :is_active,[["販売中",true],["販売停止中",false]],include_blank: "選択して下さい" %>
              </div>
              <div class="btn-wrapper mx-auto">
                <%= f.submit '新規登録',class: "btn btn-success" %>
              </div>
                <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
