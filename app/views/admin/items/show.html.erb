<div class="container">
  <h1>商品詳細</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <p class="text-center">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "400x400" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
        </p>
      </div>
      <div class="col-md-6">
        <div class="row align-items-center">
          <div class="col-md-3">
              <p class="text-left">商品名</p><br>
              <p class="text-left">商品説明</p><br>
              <p class="text-left">ジャンル</p><br>
              <p class="text-left">
                税込価格<br>
                (税抜価格)
              <p><br>
              <p class="text-left">販売ステータス</p>
          </div>
          <div class="col-9">
            <p class="text-left"><%= @item.name %></p>
            <p class="text-left"><%= @item.introduction %></p>
            <p class="text-left">#ジャンル</p>
            <p class="text-left"><%= @item.price %></p>
            <p class="text-left">#販売ステータス</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "編集する", edit_admin_item_path, {class: "btn btn-sm btn-success edit_book_39065"} %>
  </div>
</div>