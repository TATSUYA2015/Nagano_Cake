<div class="container">
  <h1>商品一覧
   <%= link_to "新規商品登録", new_admin_item_path, class: "btn btn-success" %>
 </h1>
  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
      <tbody>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited) %>円</td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>