<div class="container">
  <h3><%= (@customer.last_name + @customer.first_name) %>さんの会員詳細</h3>
</div>
<div class="container">
  <table>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td></td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td></td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td></td>
        <td><%= @customer.last_name_kana %> <%=@customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td></td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td></td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td></td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td></td>
        <td><%= @customer.email %></td>
      </tr>
       <tr>
         <td>会員ステータス</td>
         <td></td>
         <td>
           <% if @customer.is_deleted %>
           退会済み
           <% else %>
           有効
           <% end %>
         </td>
       </tr>
    </tbody>
  </table>
  <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
  <%= link_to "注文履歴一覧を見る", admin_homes_top_path, class: "btn btn-primary" %>
</div>