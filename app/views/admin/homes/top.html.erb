<div class="container">
  <h3>注文履歴一覧</h3>
</div>
<div class="container">
  <div class="row">
    <table  class="table table-border">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td>
            <%= link_to admin_order_path(order) do %>
              <%= order.updated_at.strftime('%Y/%m/%d') %>
            <% end %>
          </td>
          <td><%= order.name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>