<div class="container">
  <h1>ジャンル編集</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-8">
      <div class="col-md-3 col-sm-3">ジャンル名</div>
      <%= form_with model: @genre, url:admin_genre_path, method: :patch do |f| %>
      <div class="col-md-6 col-sm-6"><%= f.text_field :name %></div>
      <div class="col-md-3 col-sm-6"><%= f.submit '変更を保存する', {class: "btn btn-success"} %></div>
      <% end %>
    </div>
  </div>
</div>